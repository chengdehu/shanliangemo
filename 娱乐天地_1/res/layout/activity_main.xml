<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp" >

        <ImageView
            android:id="@+id/imgimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txtcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐天地"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgbtnsearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="120dp"
            android:onClick="search"
            android:src="@drawable/search2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnnew"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/selector2"
            android:onClick="news"
            android:text="最新"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnreport"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/selector2"
            android:onClick="report"
            android:text="资讯"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btngame"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/selector2"
            android:onClick="game"
            android:text="游戏"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnmovie"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector2"
            android:onClick="movie"
            android:text="电影"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnmusic"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/selector2"
            android:onClick="music"
            android:text="音乐"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnanime"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/selector2"
            android:onClick="anime"
            android:text="动漫"
            android:textSize="15sp" 
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/lstnews"
            android:layout_width="match_parent"
            android:layout_height="284dp" >

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/txtTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textColor="#ff0000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:onClick="find"
            android:text="发现"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:onClick="square"
            android:text="广场"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:onClick="message"
            android:text="消息"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:onClick="me"
            android:text="我的"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>